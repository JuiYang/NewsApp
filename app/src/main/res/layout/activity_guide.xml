<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GuideActivity"
    tools:showIn="@layout/activity_guide">

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/btn_enter_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/btn_enter_select"
        android:text="@string/guide_text"
        android:textColor="@drawable/text_enter_select"
        android:textSize="30sp"
        android:layout_marginLeft="30dp"
        android:visibility="gone"/>


    <RelativeLayout
        android:id="@+id/guide_slide"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_point_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/red_oval"
            android:background="@drawable/point_red_view"
            android:layout_width="10dp"
            android:layout_height="10dp"/>

    </RelativeLayout>

</RelativeLayout>